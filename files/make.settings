	SUPPORT_UART=n
	#lcd: y n
	SUPPORT_LCD=n
	#ambient temperature&humidity: y n
	SUPPORT_AMBIENT_TEMP_HUMIDITY=n
	SUPPORT_TEMP_HUMIDITY_SI7021=n
	#audio
	SUPPORT_AUDIO=n
	#rf
	SUPPORT_RF=y
	SUPPORT_RF_ADRV9009=n
	#iio
	SUPPORT_LIB_IIO=n
else
	#uart: y n
	SUPPORT_UART=n
	#lcd: y n
	SUPPORT_LCD=n
	#ambient temperature&humidity: y n
	SUPPORT_AMBIENT_TEMP_HUMIDITY=n
	SUPPORT_TEMP_HUMIDITY_SI7021=n
	#audio
	SUPPORT_AUDIO=n
	#rf
	SUPPORT_RF=y
	ifneq ($(findstring y,$(SUPPORT_PROJECT_SSA)),)
		SUPPORT_RF_ADRV9009=y
		#iio
		SUPPORT_LIB_IIO=y
	endif
endif
