SUPPORT_PROJECT_SSA=n

#project (wbif160m)
SUPPORT_PROJECT_WBIF160M=y

#spectrum fft or kernel
SUPPORT_SPECTRUM_KERNEL=y
SUPPORT_SPECTRUM_USER=n
